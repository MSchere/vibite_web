{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "baseUrl": "./",
        "paths": {
            "src/*": ["src/*"],
            "$root/*": ["../*"],
            "$types/*": ["../src/types/*"]
        }
    },
    "compileOnSave": true,
    "include": ["src"]
}
